<% include ../partials/header %>
    <div class="container">

        <div class="row justify-content-center bg-opacity">
            <div class="col-md-12 text-center">
            <h1 > Edit <%= bar.name %> </h1>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-4">
                <form action="/bars/<%= bar._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <label class="name"> Name </label>
                    <div class='form-group'> <input class="form-control" type="text" name="bar[name]" value="<%= bar.name%>"> </div>
                    <label class="name"> Cost </label>
                    <div class='form-group'> <input class="form-control" type="number" name="bar[price]" value=<%= bar.price %> min="0.01" step="0.01"> </div>
                    
                    <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                    </div>
                     
                    <label class="name"> Description </label>
                     <div class='form-group'> <input class="form-control" type="text" name="bar[description]" value="<%= bar.description%>"> </div>
                    
                    <div class='form-group'> <button class="btn btn-lg btn-primary btn-block">Update!</button> </div>
                    
                </form>
            </div>
        </div>
        <a href="/bars"> Go Back </a>
    </div>
    <% include ../partials/footer %>