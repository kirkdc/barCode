<% include ../partials/header %>

    <div class="container">
        <div class="row justify-content-center bg-opacity">
        <div class="col-md-12 text-center">
            <h1 style="text-align: center"> Edit <%= user.username %>'s Profile </h1>
        </div>
            <div class="col-xs-12 col-md-6 col-lg-4">

                <form action="/users/<%=currentUser._id%>?_method=PUT" method="POST">


                    <div class="form-group">
                       <label for="firstName">First Name</label>
                        <input id="firstName" class="form-control" type="text" name="user[firstName]" value="<%= user.firstName%>">
                    </div>

                    <div class="form-group">
                       <label for="lastName">Last Name</label>
                        <input id="lastName" class="form-control" type="text" name="user[lastName]" value="<%= user.lastName%>">
                    </div>

                    <div class="form-group">
                       <label for="email">Email</label>
                        <input id="email" class="form-control" type="email" name="user[email]" value="<%= user.email%>">
                    </div>

                    <div class="form-group">
                       <label for="avatar">Avatar</label>
                        <input id="avatar" class="form-control" type="text" name="user[avatar]" value="<%= user.avatar%>">
                    </div>

                    <div class="form-group">
                       <label for="about">About</label>
                        <input id="about" class="form-control" type="text" name="user[about]" value="<%= user.about%>">
                    </div>


                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include ../partials/footer%>